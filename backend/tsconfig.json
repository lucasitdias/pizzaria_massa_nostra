{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": "./",                // raiz do projeto
    "outDir": "./dist",             // output na pasta dist
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "types/*": ["src/types/*"],
      "schemas/*": ["src/schemas/*"],
      "services/*": ["src/services/*"],
      "controllers/*": ["src/controllers/*"],
      "middlewares/*": ["src/middlewares/*"],
      "routes/*": ["src/routes/*"],
      "utils/*": ["src/utils/*"],
      "config/*": ["src/config/*"]
    },
    "types": ["node", "jest"],
    "typeRoots": ["./node_modules/@types", "./src/@types"]
  },
  "include": ["src/**/*", "prisma/**/*", "seed/**/*", "pizzaria-front/api.js", "api.js"],
  "exclude": ["node_modules", "dist", ".docker"]
}
